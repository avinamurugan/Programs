#include<stdio.h>
#include<conio.h>
void main(){
int i,j,n,k;
clrscr();
scanf("%d",&n);
for(i=n;i!=0;i--){
	      for(k=i-1;k!=0;k--){
		printf(" ");

		}
	for(j=i-1;j<n;j++){
	printf("*");
}
printf("\n");
}
for(i=n;i!=0;i--){
	      for(k=i-1;k<n;k++){
		printf(" ");

		}
	for(j=i-1;j!=0;j--){
	printf("*");
}
printf("\n");
}

getch();
}
